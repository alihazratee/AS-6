<div class="row">
  <div class="col-md-12">
    <h2>Departments
      <a href="/departments/add" class="btn btn-success pull-right">Add New
        Department</a>
    </h2>
    <hr />
    <table class="table">
      <tr>
        <th>Department Number</th>
        <th>Department Name</th>
      </tr>
      {{#each departments}}
        <tr>
          <td><a
              href="/employees?department={{departmentId}}"
            >{{departmentId}}</a></td>
          <td><a href="/department/{{departmentId}}">{{departmentName}}</a></td>
          <td><a
              href="/department/{{departmentId}}"
              class="btn btn-danger"
            >remove</a></td>
        </tr>
      {{else}}
        <tr>
          <td colspan="5">No Data Available</td>
        </tr>
      {{/each}}
    </table>

  </div>
</div>