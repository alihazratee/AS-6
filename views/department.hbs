<div class="row">
  <div class="col-md-12">

    <h2>{{department.departmentName}}
      - Program Code:{{department.departmentId}}</h2>
    <hr />

    <form method="post" action="/departments/update">
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label for="departmentName">Department Name</label>
            <input
              class="form-control"
              id="departmentName"
              name="departmentName"
              type="text"
              value="{{department.departmentName}}"
            />
          </div>
        </div>
      </div>
      <input type="hidden" value="{{department.departmentId}}" />
      <hr />

      <input
        type="submit"
        class="btn btn-primary pull-right"
        value="Update Department"
      /><br /><br /><br />

    </form>
  </div>
</div>